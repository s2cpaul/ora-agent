{
  // VS Code Tasks - Run with Cmd+Shift+B (Mac) or Ctrl+Shift+B (Windows)
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ğŸ” Type Check",
      "type": "shell",
      "command": "npm run type-check",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "ğŸ”§ Lint",
      "type": "shell",
      "command": "npm run lint",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "ğŸ”§ Lint Fix",
      "type": "shell",
      "command": "npm run lint:fix",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "ğŸ’… Format",
      "type": "shell",
      "command": "npm run format",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "âœ… Validate All",
      "type": "shell",
      "command": "npm run validate",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": ["$tsc", "$eslint-stylish"]
    },
    {
      "label": "ğŸ—ï¸ Build",
      "type": "shell",
      "command": "npm run build",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "ğŸš€ Dev Server",
      "type": "shell",
      "command": "npm run dev",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "pattern": {
          "regexp": "."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE.*ready",
          "endsPattern": "."
        }
      }
    }
  ]
}
